{
    "name": "dbapiator_demo",
    "connection": {
        "dbdriver": "mysqli",
        "hostname": "mysql",
        "username": "dbapiator",
        "password": "parola123",
        "database": "book_management"
    },
    "configApi": {
        "acls": [
            {"ip": "172.16.0.0/12", "allow": true},
            {"ip": "172.21.0.0/12", "allow": true},
            {"ip": "0.0.0.0/0", "allow": false}
        ],
        "secret": "secret"
    },
    "dataApi": {
        "acls": {
            "IP": [
                {
                    "ip": "172.16.0.0/12",
                    "allow": true
                },
                {
                    "ip": "172.21.0.0/12",
                    "allow": true
                },
                
                {
                    "ip": "192.168.0.0/12",
                    "allow": true
                },
                {
                    "ip": "0.0.0.0/0",
                    "allow": false
                }
            ],
            "path": [
                {
                    "pattern": "/*",
                    "method": "OPTIONS",
                    "allow": true
                },
                {
                    "pattern": "/products",
                    "method": "GET",
                    "allow": true
                },
                {
                    "pattern": "/products",
                    "method": "*",
                    "allow": false
                },
                {
                    "pattern": "/customers/{{userId}}/*",
                    "method": "GET",
                    "allow": true
                },
                {
                    "pattern": "/customers/{{userId}}/*",
                    "method": "PATCH",
                    "allow": true
                },
                {
                    "pattern": "/customers/{{userId}}/*",
                    "method": "*",
                    "allow": false
                },
                {
                    "pattern": "/orders/*",
                    "method": "*",
                    "allow": false
                },
                {
                    "pattern": "/Users/*",
                    "method": "POST",
                    "allow": true
                },
                {
                    "pattern": "/Users/{{unm}}/*",
                    "method": "*",
                    "allow": true
                }
                
            ]
        },
        "authentication": {
            "validity": 172800,
            "loginQuery": "select username unm, role from Users where username='[[login]]' and password_hash=('[[password]]');",
            "2fa": "",
            "resetQuery": "",
            "updatePasswordQuery": "UPDATE Users SET pass='[[newpassword]]' WHERE username='[[login]]' and password_hash=('[[password]]',224);",
            "allowGuest": true
        }
    }
}